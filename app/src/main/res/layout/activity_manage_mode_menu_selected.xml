<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:gravity="center"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/manage_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:textSize="40dp"
        android:text="메뉴 관리"/>

    <ImageView
        android:id="@+id/selected_menu_image"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:padding="20dp"
        android:src="@drawable/ic_launcher_background" />
    
    <Button
        android:id="@+id/change_image_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="사진 변경" />

    <Button
        android:id="@+id/change_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="이름 및 가격 변경" />

    <Button
        android:id="@+id/change_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="남은 수량 변경" />

    <Button
        android:id="@+id/check_sales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="매출 확인" />
    <Button
        android:id="@+id/go_back"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="120dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="30dp"
        android:text="뒤로가기"
        />
</LinearLayout>

